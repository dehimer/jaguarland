$top-height = 45
$middle-height = 10
$bottom-height = 45
$video-width = 1280
$video-height = 1024
$max-height = floor(100*$video-height/$top-height)

body
  margin: 0
  padding: 0
  height: 100vh
  width: 100vw
  overflow: hidden

.top
  position: relative
  height: "%s%" % ($top-height)
  overflow: hidden
  
  .video-container
    position: relative
    top: 0px
    left: 0px
    bottom: 0px
    right: 0px
    height: 100%
    width: 100%

    video
      z-index: -1
      position: absolute
      transform: translate(-50%, -50%)
      top: 50%
      left: 50%


    @media (max-width: "%spx" % ($video-width)), (min-height: "%spx" % ($max-height))
      video
        min-width: 100%
        max-height: 100%
        
        min-height: none
        max-width: none

    @media (min-width: "%spx" % ($video-width)), (max-height: "%spx" % ($max-height))
      video
        min-height: 100%
        max-width: 100%

        min-width: none
        max-height: none

  .message
    position: absolute
    z-index: 1
    top: 0px
    left: 0px
    width: 100%
    height: 100%
    color: white
    display: flex
    flex-direction: column
    justify-content: center
    text-align: center


.middle
  background-color: white
  height: "%s%" % ($middle-height)
  width: 100%

  .message
    display: flex
    flex-direction: column
    
    .title
      text-align: center

    .text
      text-align: center

.bottom
  height: "%s%" % ($bottom-height)
  width: 100%

  #map
    width: 100%
    height: 100%